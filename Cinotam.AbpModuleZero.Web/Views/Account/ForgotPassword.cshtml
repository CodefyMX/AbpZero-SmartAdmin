
@{
    ViewBag.Title = "ForgotPassword";
}
<div class="container">
    <div id="ConfirmArea" class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <form id="changePasswordForm" action="@Url.Action("ForgotPassword")" class="form-horizontal" method="POST">
                    <fieldset>
                        <legend>@L("ForgottenPasswordRecovery")</legend>
                        <p>@L("RecoverPasswordMessage")</p>
                        <div class="form-group">
                            <div class="col-lg-4">
                                <label class="control-label">@L("EmailAddress")</label>
                                <input type="email" name="email" required class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("Confirm")</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>