@model Cinotam.Cms.App.Templates.Dto.TemplateInput
@{
    Layout = null;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form id="createTemplateForm">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModal-label">@L("CreateEditTemplate")</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label" for="Title">@L("Name")</label>
                    @Html.TextBoxFor(a => a.TemplateName, new { @class = "form-control", required = "required" })
                </div>
                
                    <div class="checkbox">
                        <label>

                            @Html.CheckBoxFor(a => a.IsPartial) @L("IsPartial")
                        </label>
                    </div>
                <div class="form-group">
                    <label class="control-label">@L("CopyFrom")</label>
                    @Html.DropDownListFor(a => a.CopyFrom, new SelectList(Model.AvaiableTemplatesToCopy, "Name", "Name", Model.CopyFrom), L("SelectTemplate"), new { @class = "form-control" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@L("Close")</button>
                <button type="submit" class="btn btn-primary">@L("Save")</button>
            </div>
        </form>

    </div>
</div>
<script>
    (function () {
        $(document)
            .ready(function () {
                $("#createTemplateForm").on("submit", function (e) {
                    e.preventDefault();
                    var data = $(this).serializeFormToObject();
                    data.IsPartial = $ ("#IsPartial").is(":checked");
                    console.log(data);
                    abp.services.cms.templateService.addTemplate(data)
                        .done(function () {
                            window.location.reload();
                        });
                });
            });

    })();
</script>
