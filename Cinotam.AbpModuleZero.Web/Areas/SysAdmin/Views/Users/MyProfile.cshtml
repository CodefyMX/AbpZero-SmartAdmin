                    <form action="@Url.Action("CreateEditUser")" method="POST" id="createEditForm" class="smart-form">
                        @Html.HiddenFor(a => a.Id)
                        @Html.HiddenFor(a => a.UserName)
                        @Html.HiddenFor(a => a.ProfilePicture)
                        @Html.HiddenFor(a => a.Password)
                        @Html.HiddenFor(a => a.IsActive)
                        <fieldset>
                            <section>
                                <label class="label col col-2">@L("UserName")</label>
                                <div class="col col-10">
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(a => a.UserName, new { disabled = "disabled" })
                                    </label>
                                </div>
                            </section>
                            <section>
                                <label class="label col col-2">@L("EmailAddress")</label>
                                <div class="col col-10">
                                    <label class="input">
                                        <i class="icon-append fa fa-envelope-o"></i>
                                        @Html.TextBoxFor(a => a.EmailAddress, new { required = "required", type = "email" })
                                    </label>
                                </div>
                            </section>
                            <section>
                                <label class="label col col-2">@L("Name")</label>
                                <div class="col col-10">
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(a => a.Name, new { required = "required" })
                                    </label>
                                </div>
                            </section>
                            <section>
                                <label class="label col col-2">@L("Surname")</label>
                                <div class="col col-10">
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(a => a.Surname, new { required = "required" })
                                    </label>
                                </div>
                            </section>
                            <section>
                                <label class="label col col-2">@L("MyRoles")</label>
                                <div class="col col-10">
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.TextBoxFor(a => a.MyStringRoles, new { required = "required",disabled="disabled" })
                                    </label>
                                </div>
                            </section>
                            <section>
                                <label class="label col col-2">@L("Password")</label>
                                <div class="col col-10 padding-top-5">
                                    <label class="input">
                                        <a data-modal href="@Url.Action("ChangePassword")">@L("ChangePassword")</a>
                                    </label>
                                </div>
                            </section>

                        </fieldset>
                        <footer>
                            <button type="submit" class="btn btn-primary">
                                @L("Save")
                            </button>
                        </footer>

