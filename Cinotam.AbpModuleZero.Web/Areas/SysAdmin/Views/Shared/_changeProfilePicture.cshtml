@model Cinotam.ModuleZero.AppModule.Users.Dto.UserProfileDto
    


<style>
    
    #profilePicture {
        width: 120px;
        height: 120px;
        cursor: pointer;
    }
</style>

<form action="@Url.Action("ChangeProfilePicture","Users")" method="POST" id="changeProfilePicture" class="smart-form">
    @Html.HiddenFor(a => a.Id)
    <fieldset>
        <section>
            <div id="imageWrapped" class="col col-2 no-padding text-center">
                <img id="profilePicture" src="@Model.ProfilePicture">
            </div>
        </section>
        <section class="col col-4 no-padding display-none">
            <label for="file" class="input input-file">
                <div class="button"><input type="file" name="file" id="profilePictureFile" onchange="window.uploadProfilePicture(this)">@L("SelectFile")</div><input type="text" id="placeHolder" placeholder="MyAwesomePic.jpg" readonly="">
            </label>
        </section>
    </fieldset>
</form>
