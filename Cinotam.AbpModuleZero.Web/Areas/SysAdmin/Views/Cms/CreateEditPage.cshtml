@model Cinotam.Cms.App.Pages.Dto.PageInput
@{
    Layout = null;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form id="createPageForm">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModal-label">@L("CreateEditPage")</h4>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label" for="Title">@L("Name")</label>
                        @Html.TextBoxFor(a => a.Title, new { @class = "form-control",required="required" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">@L("SelectTemplate")</label>
                        @Html.DropDownListFor(a => a.TemplateName, new SelectList(Model.Templates, "Name", "Name", Model.TemplateId), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">@L("SelectParentPage")</label>
                        @Html.DropDownListFor(a => a.ParentId, new SelectList(Model.Pages, "Id", "Title", Model.ParentId), L("SelectParent"), new { @class = "form-control" })
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@L("Close")</button>
                <button type="submit" class="btn btn-primary">@L("Save")</button>
            </div>
        </form>
      
    </div>
</div>
<script>
    (function() {
        $(document)
            .ready(function() {
                $("#createPageForm").on("submit",function(e) {
                    e.preventDefault();
                    var data = $(this).serializeFormToObject();
                    console.log(data);
                    abp.services.cms.pagesService.createEditPage(data)
                        .done(function() {
                            window.location.reload();
                        });
                });
            });

    })();
</script>