    <script src="~/Areas/SysAdmin/Scripts/datatables.responsiveConfigs.js"></script>
    <script src="~/Areas/SysAdmin/Scripts/smartAdminScripts/plugin/bootstrap-typeahead/bootstrap-typeahead.min.js"></script>
    <script>
        (function () {
            var pageId = $("#Id").val();
            $('.js-toggle-status')
                .click(function () {
                    abp.services.cms.pagesService.togglePageStatus(pageId)
                        .done(function () {
                            window.location.reload();
                        });
                });
            $('.js-toggle-main')
                .click(function () {
                    abp.services.cms.pagesService.setPageAsMain(pageId)
                        .done(function () {
                            window.location.reload();
                        });
                });
            $('.js-toggle-menu')
                .click(function () {
                    abp.services.cms.pagesService.togglePageInMenuStatus(pageId)
                        .done(function () {
                            window.location.reload();
                        });
                });
            var selectedCategory = {
                typeAheadSelected: false,
                pageId: 0,
                displayName: "",
                name: ""
            };
            $(".js-btn-change-cat").on("keyup", function () {
                var self = this;
                if (selectedCategory.typeAheadSelected) {
                    self.attr ("disabled",false);
                }
            });
            abp.services.cms.pagesService.getCategories()
                .done(function (data) {
                    var categories = [];
                    $.each(data.categories,
                        function (i, element) {
                            categories.push({
                                name: element.displayName,
                                id: element.name
                            });
                        });
                    $('#category')
                        .typeahead({
                            source: categories,
                            display: 'name',
                            val: 'id',
                            onSelect: function (item) {
                                selectedCategory.displayName = item.text;
                                selectedCategory.name = item.value;
                                selectedCategory.pageId = $("#Id").val();
                                selectedCategory.typeAheadSelected = true;
                                if (item.name === "-21") {
                                    selectedCategory = {
                                        typeAheadSelected: false,
                                        pageId: 0,
                                        displayName: "",
                                        name: ""
                                    };
                                }
                                $ (".js-btn-change-cat").attr ("disabled", false);
                            }
                        }
                        );
                });
            $("#categorizePage")
                .on("submit",
                    function (e) {
                        e.preventDefault();
                        if (!selectedCategory.typeAheadSelected) {
                            selectedCategory.name = $("#category").val();
                            selectedCategory.pageId = $("#Id").val();
                        }
                        abp.services.cms.pagesService.setCategory(selectedCategory)
                            .done(function () {
                                    window.location.reload();
                            });
                    });

        })();
    </script>
}