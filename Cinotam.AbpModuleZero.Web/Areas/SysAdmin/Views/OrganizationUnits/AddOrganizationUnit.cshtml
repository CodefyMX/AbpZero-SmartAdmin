@using Abp.Web.Mvc.Extensions
@model Cinotam.ModuleZero.AppModule.OrganizationUnits.Dto.OrganizationUnitInput
@{
    Layout = null;
}

<div class="modal-dialog" id="leaderModal" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×
            </button>
            <h4 class="modal-title"><i class="fa fa-3x fa-hacker-news"></i> </h4>
        </div>
        <div class="modal-body no-padding">
            <div class="padding-10">

                <form method="POST" id="createEditOrgUnit" class="smart-form">
                    @Html.HiddenFor(a=>a.ParentId)
                    @Html.HiddenFor(a=>a.Code)
                    <fieldset>
                        <section>
                            <div class="row">
                                <label class="label col col-2">@L("Name")</label>
                                <div class="col col-10">
                                    <label class="input">
                                        <i class="icon-append fa fa-gear"></i>
                                        @Html.TextBoxFor(a => a.DisplayName, new { required = "required" })
                                    </label>
                                </div>
                            </div>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            @L("Save")
                        </button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            @L("Cancel")
                        </button>
                    </footer>

                </form>
            </div>
        </div>
    </div>
</div>
@Html.IncludeScript("~/Areas/SysAdmin/Views/OrganizationUnits/AddOrganizationUnit.js")
